<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información del Equipo</title>
    <style>
        body {
            background: linear-gradient(to bottom, #241f30, #0d1117, #0d1117);
            color: #c9d1d9;
            font-family: Arial, sans-serif;
            padding: 20px;
            box-sizing: border-box;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        .team-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .team-avatar {
            width: 150px; /* Tamaño del avatar del equipo */
            height: 150px;
            border-radius: 50%;
            background-color: #ffffff;
            margin-right: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-shrink: 0; /* Evitar que el avatar del equipo se haga más pequeño */
        }
        .team-avatar img {
            max-width: 100%;
            max-height: 100%;
            border-radius: 50%;
        }
        .team-info {
            flex-grow: 1; /* El contenido se expandirá para llenar el espacio disponible */
        }
        .team-name {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .team-owner {
            font-size: 18px;
            margin-bottom: 10px;
        }
        .team-objective {
            font-style: italic;
            margin-bottom: 20px;
        }
        .members-list {
            display: flex;
            flex-wrap: wrap;
        }
        .member-card {
            width: calc(33.33% - 20px);
            background-color: #30363d;
            padding: 10px;
            margin-right: 20px;
            margin-bottom: 20px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            cursor: pointer; /* Cambia el cursor al pasar sobre las tarjetas de miembros */
        }
        .member-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #ffffff;
            margin-right: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .member-avatar img {
            width: 100%;
            border-radius: 50%;
        }
        .member-name {
            font-size: 16px;
            font-weight: bold;
            color: #f0f6fc;
        }

        /* Estilos para dispositivos con ancho máximo de 600px */
        @media (max-width: 600px) {
            .team-header {
                flex-direction: column; /* Apila los elementos verticalmente */
                align-items: flex-start; /* Alinea los elementos a la izquierda */
            }
            .team-avatar {
                margin-right: 0;
                margin-bottom: 20px;
            }
            .team-info {
                text-align: center;
            }
            .member-card {
                width: calc(50% - 20px); /* Dos miembros por fila */
            }
        }
        /* Estilos para dispositivos con ancho máximo de 400px */
        @media (max-width: 400px) {
            .member-card {
                width: 100%; /* Un miembro por fila */
            }
            .member-name {
                display: none; /* Ocultar el nombre del miembro en pantallas muy pequeñas */
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="team-header">
            <div class="team-avatar">
                <div id="team-avatar">
                    <!-- Imagen del equipo -->
                </div>
            </div>
            <div class="team-info">
                <div class="team-name">
                    <!-- Nombre del equipo -->
                </div>
                <div class="team-owner">
                    <!-- Nombre del dueño -->
                </div>
                <div class="team-objective">
                    <!-- Objetivo del equipo -->
                </div>
            </div>
        </div>
        <div class="members-list">
            <!-- Lista de miembros se agregará aquí dinámicamente -->
        </div>
    </div>

    <script>
        // Función para generar un color aleatorio en formato hexadecimal
        function getRandomColor() {
            var letters = '0123456789ABCDEF';
            var color = '#';
            for (var i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        // Función para obtener las iniciales de un nombre
        function getInitials(name) {
            return name.split(' ').map(word => word.charAt(0)).join('');
        }

        // Función para redirigir a la página de perfil
        function redirectToProfile(id) {
            window.location.href = '/perfil/' + id; // Reemplaza 'username' con el ID del usuario
        }

       
    
        // Renderizar la información del equipo
        document.querySelector('#team-avatar').textContent = getInitials(teamInfo.name);
        document.querySelector('.team-name').textContent = teamInfo.name;
        document.querySelector('.team-owner').textContent = 'Dueño: ' + teamInfo.owner;
        document.querySelector('.team-objective').textContent = 'Objetivo: ' + teamInfo.objective;

        // Renderizar la lista de miembros
        var membersList = document.querySelector('.members-list');
        teamInfo.members.forEach(function(member) {
            var memberCard = document.createElement('div');
            memberCard.classList.add('member-card');

            var memberAvatar = document.createElement('div');
            memberAvatar.classList.add('member-avatar');
            memberAvatar.textContent = getInitials(member.name);
            memberAvatar.style.backgroundColor = getRandomColor();

            var memberName = document.createElement('div');
            memberName.classList.add('member-name');
            memberName.textContent = member.name;

            memberCard.appendChild(memberAvatar);
            memberCard.appendChild(memberName);

            // Agregar el evento de clic para redirigir al perfil del miembro
            memberCard.addEventListener('click', function() {
                redirectToProfile(member.id);
            });

            membersList.appendChild(memberCard);
        });
    </script>
</body>
</html>
